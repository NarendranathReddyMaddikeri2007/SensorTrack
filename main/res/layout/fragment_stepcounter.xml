<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark7"
    android:orientation="vertical"
    tools:context=".Fragments.StepcounterFragment">

    <Toolbar
        android:id="@+id/toolbar_fragment_step_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step Counter"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </Toolbar>

    <LinearLayout
        android:id="@+id/linearlayout1_fragment_step_counter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_below="@id/toolbar_fragment_step_counter"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/running_image1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/corben_bold"
                android:gravity="end|bottom"
                android:text="Keep On Running"
                android:textColor="@color/dark3"
                android:padding="10dp"
                android:textSize="30sp" />
        </LinearLayout>

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="@color/dark9"
                   android:padding="15dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="This Hour"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="25sp"
                           android:padding="5dp"
                           />

                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/refresh_hour_fragment_step_counter_mb"
                           style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:layout_marginStart="5dp"
                           android:text="Reset" />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Steps :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:id="@+id/total_steps_hour_fragment_stepcounter_tv"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:textColor="@color/white"
                           android:textSize="25sp"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Kilometers :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:id="@+id/total_kilometers_hour_fragment_stepcounter_tv"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:textColor="@color/white"
                           android:textSize="25sp"
                           />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="Calories Burned :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:id="@+id/total_calories_hour_fragment_stepcounter_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:textColor="@color/white"
                           android:textSize="25sp" />
                   </LinearLayout>
               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="@color/dark9"
                   android:padding="15dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Today"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="25sp"
                           android:padding="5dp"
                           />

                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/refresh_day_fragment_step_counter_mb"
                           style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:layout_marginStart="5dp"
                           android:text="Reset" />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Steps :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:id="@+id/total_steps_day_fragment_stepcounter_tv"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:textColor="@color/white"
                           android:textSize="25sp"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Kilometers :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:id="@+id/total_kilometers_day_fragment_stepcounter_tv"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:textColor="@color/white"
                           android:textSize="25sp"
                           />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="Calories Burned :   "
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="----"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:id="@+id/total_calories_day_fragment_stepcounter_tv"
                           android:clickable="true"
                           android:focusable="true"
                           android:longClickable="true"
                           android:textColor="@color/white"
                           android:textSize="25sp"
                           />
                   </LinearLayout>
               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</RelativeLayout>